{
  "chainer": {
    "in": ["message", "message_history", "state"],
    "pipe": [
      {
        "in": ["message"],
        "out": ["slots_natasha"],
        "name": "natasha_ner",
        "classes": ["LocationExtractor", "DatesExtractor"]
      },
      {
        "in": ["message"],
        "out": ["slots_fuzzy"],
        "name": "slotfill_raw",
        "save_path": "../examples/infographer_slots.json",
        "load_path": "../examples/infographer_slots.json"
      },
      {
        "in": ["slots_fuzzy", "slots_natasha"],
        "out": ["slots"],
        "name": "slots_combiner"
      },
      {
        "in": ["message", "message_history", "state"],
        "out": ["inter_response", "confidence"],
        "class": "deeppavlov.skills.pattern_matching_skill:PatternMatchingSkill",
        "responses": ["Вопрос типа \"сколько откуда\""],
        "patterns": ["из как", "регионов", "округ ", "топ-", "откуда", "экспортёр", "лидер", "лучши"]
      },
      {
        "in": ["message", "slots", "inter_response"],
        "out": ["response"],
        "name": "ner_string_generator",
        "history_path": "examples/infographer_history.jsonl"
      }
    ],
    "out": ["response", "confidence", "state"]
  }
}